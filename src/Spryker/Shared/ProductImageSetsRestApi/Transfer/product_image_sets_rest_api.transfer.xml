<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="RestProductImageSetsAttributes">
        <property name="imageSets" type="RestProductImageSet[]" singular="imageSets"/>
    </transfer>

    <transfer name="RestProductImageSet">
        <property name="name" type="string"/>
        <property name="images" type="RestImagesAttributes[]" singular="images"/>
    </transfer>

    <transfer name="RestImagesAttributes">
        <property name="externalUrlLarge" type="string"/>
        <property name="externalUrlSmall" type="string"/>
    </transfer>

    <transfer name="ProductAbstractImageStorage">
    </transfer>

    <transfer name="ProductImageSetStorage">
    </transfer>

    <transfer name="ProductAbstractStorage">
        <property name="idProductAbstract" type="int"/>
    </transfer>

    <transfer name="RestErrorMessage">
        <property name="code" type="string"/>
        <property name="status" type="int"/>
        <property name="detail" type="string"/>
    </transfer>

    <transfer name="ProductConcreteStorage">
        <property name="idProductConcrete" type="int"/>
        <property name="idProductAbstract" type="int"/>
    </transfer>

</transfers>
